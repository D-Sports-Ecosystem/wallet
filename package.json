{
  "name": "@d-sports/wallet",
  "version": "1.0.0",
  "type": "module",
  "description": "A comprehensive wallet package with Rainbow Kit and Wagmi connectors, supporting both Next.js and React Native with social login functionality",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "react-native": "dist/react-native/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./nextjs": {
      "import": "./dist/nextjs/index.esm.js",
      "require": "./dist/nextjs/index.js",
      "types": "./dist/nextjs/index.d.ts"
    },
    "./react-native": {
      "import": "./dist/react-native/index.esm.js",
      "require": "./dist/react-native/index.js",
      "types": "./dist/react-native/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:core && npm run build:nextjs && npm run build:react-native",
    "build:core": "rollup -c rollup.config.js",
    "build:nextjs": "rollup -c rollup.config.nextjs.js",
    "build:react-native": "rollup -c rollup.config.react-native.js",
    "clean": "rimraf dist",
    "dev": "rollup -c rollup.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "wallet",
    "ethereum",
    "web3",
    "rainbow-kit",
    "wagmi",
    "social-login",
    "nextjs",
    "react-native",
    "crypto",
    "blockchain"
  ],
  "author": "D-Sports",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-sports/wallet"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@web3auth/modal": "^8.0.0",
    "@web3auth/base": "^8.0.0",
    "@web3auth/ethereum-provider": "^8.0.0",
    "@web3auth/openlogin-adapter": "^8.0.0",
    "@web3auth/wallet-connect-v2-adapter": "^8.0.0",
    "@web3auth/metamask-adapter": "^8.0.0",
    "@web3auth/no-modal": "^8.0.0",
    "@walletconnect/web3wallet": "^1.11.0",
    "@walletconnect/core": "^2.11.0",
    "@walletconnect/utils": "^2.11.0",
    "ethers": "^6.8.0",
    "viem": "^1.19.0",
    "abitype": "^0.10.0"
  },
  "devDependencies": {
    "@rainbow-me/rainbowkit": "^1.3.0",
    "@wagmi/core": "^1.4.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0",
    "rollup": "^3.29.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "@rollup/plugin-terser": "^0.4.0",
    "rimraf": "^5.0.0"
  },
  "optionalDependencies": {
    "react-native": ">=0.70.0",
    "@react-native-async-storage/async-storage": "^1.19.0",
    "react-native-keychain": "^8.1.0",
    "react-native-url-polyfill": "^2.0.0"
  }
} 